{
  "compilerOptions": {
    "outDir": "./dist/",
    "noEmit": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "strict": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
  ]
}